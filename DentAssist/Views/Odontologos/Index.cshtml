@model IEnumerable<DentAssist.Models.Odontologo>

@{
    ViewData["Title"] = "Odontólogos";
}

<h1 class="mb-4">Lista de Odontólogos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Odontólogo</a>
</p>

<table class="table table-striped">
    <thead class= "table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Matricula)</th>
            <th>@Html.DisplayNameFor(model => model.Especialidad)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Matricula</td>
                <td>@item.Especialidad</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
