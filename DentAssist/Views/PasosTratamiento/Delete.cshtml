@model DentAssist.Models.PasoTratamiento

@{
    ViewData["Title"] = "Delete";
}

<h3>¿Estas seguro que deseas eliminar esto?</h3>
<div>
    <h4>PasoTratamiento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tratamiento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tratamiento.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaEstimada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaEstimada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Observaciones)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Observaciones)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <div class="mt-2">
            <a asp-controller="PlanesTratamiento" asp-action="Details" asp-route-id="@Model.PlanTratamientoId" class="btn btn-secondary">Volver atrás</a>
        </div>
    </form>
</div>
